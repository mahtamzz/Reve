{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",

    "strict": false,
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["Frontend/src/*"]
    },

    "lib": ["DOM", "DOM.Iterable", "ESNext"]
  },
  "include": [
    "Frontend/src",
    "Frontend/src/vite-env.d.ts"
  ]
}
