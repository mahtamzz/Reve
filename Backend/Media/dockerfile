FROM node:18-alpine

WORKDIR /app

# install deps
COPY Media/package*.json ./
RUN npm ci --only=production

# shared code
COPY shared ./shared

# service code
COPY Media ./Media

WORKDIR /app/Media

EXPOSE 3004

HEALTHCHECK --interval=30s --timeout=3s CMD node -e \
    "require('http').get('http://localhost:3004/health', r => process.exit(r.statusCode === 200 ? 0 : 1))"

CMD ["node", "server.js"]
