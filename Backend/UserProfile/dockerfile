FROM node:18-alpine

WORKDIR /app

# ---- install dependencies ONCE at /app ----
COPY UserProfile/package*.json ./
RUN npm ci --only=production

# ---- shared code ----
COPY shared ./shared

# ---- service code ----
COPY UserProfile ./UserProfile

WORKDIR /app/UserProfile

EXPOSE 3001

HEALTHCHECK --interval=30s --timeout=3s CMD node -e \
    "require('http').get('http://localhost:3001/health', r => process.exit(r.statusCode === 200 ? 0 : 1))"

CMD ["node", "server.js"]
