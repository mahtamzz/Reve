FROM node:18-alpine

WORKDIR /app

# ---- install dependencies ONCE at /app ----
COPY Chat/package*.json ./
RUN npm ci --only=production

# ---- shared code ----
COPY shared ./shared

# ---- service code ----
COPY Chat ./Chat

WORKDIR /app/Chat

EXPOSE 3006

HEALTHCHECK --interval=30s --timeout=3s CMD node -e \
    "require('http').get('http://localhost:3006/health', r => process.exit(r.statusCode === 200 ? 0 : 1))"

CMD ["node", "server.js"]
