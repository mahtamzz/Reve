{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",

    "moduleResolution": "bundler",

    "strict": false,
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,

    "baseUrl": "./upmind/src",
    "paths": {
      "@/*": ["*"]
    }
  },

  "include": ["upmind/src"]
}
